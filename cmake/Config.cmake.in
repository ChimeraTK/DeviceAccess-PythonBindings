# - Config file for the @PROJECT_NAME@ package
# It defines the following variables
# ${PROJECT_NAME}_INCLUDE_DIRS : include directories for $PROJECT_NAME$
# ${PROJECT_NAME}_VERSION      : the version of this library

set(prj_name ${PROJECT_NAME})
string(TOLOWER ${Dollar}{prj_name} header_drirectory)
 
# Compute paths
get_filename_component(${PROJECT_NAME}_CMAKE_DIR "${Dollar}{CMAKE_CURRENT_LIST_FILE}" PATH)

# There only is one include path, search for it
find_path(${PROJECT_NAME}_INCLUDE_DIR 
          NAMES ${Dollar}{header_drirectory}/HelperFunctions.h 
          HINTS ${CMAKE_INSTALL_PREFIX}/include /usr/include/mtca4u)
          
#Now set the variables to be exported. These are the plural versions as
#for instance more so files might be implemented later.
set(${PROJECT_NAME}_INCLUDE_DIRS ${Dollar}{${PROJECT_NAME}_INCLUDE_DIR})
set(${PROJECT_NAME}_VERSION ${${PROJECT_NAME}_SOVERSION})
